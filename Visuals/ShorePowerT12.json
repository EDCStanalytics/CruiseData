{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Area chart showing cruise passenger totals by month.",
  "padding": 6,
  "autosize": {"type": "fit", "contains": "padding"},
  "title": {"text": "T12 Shore Power Usage (kWh)"},
 
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/EDCStanalytics/CruiseData/refs/heads/main/Cruise_Dummy_Data.csv",
      "format": {"type": "csv"},
      "transform": [
        {"type": "formula", "as": "year", "expr": "year(datum.Date)"},
        {"type": "filter", "expr": "isValid(datum.year)"},
       {"type": "filter", "expr": "datetime(datum.Date) >= datetime(year(now()), month(now())-13, date(now()))"},
        {"type": "filter", "expr": "datetime(datum.Date) <= datetime(year(now()), month(now())-1, date(now()))"}
      ]
    },
    {
      "name": "YoY",
      "source": "table",
      "transform": [
        {
          "type": "project",
          "fields": ["Date", "Usage(kWh)", "Terminal"]
        },
        {
          "type": "formula",
          "as": "parsedDate",
          "expr": "timeParse(datum.Date, '%m/%d/%Y')"
        },
    {
  "type": "collect",
  "sort": { "field": "parsedDate", "order": "ascending" }
},
        {
          "type": "formula",
          "as": "monthIndex",
          "expr": "month(datum.parsedDate)"
        },
        {
          "type": "formula",
          "as": "monthName",
          "expr": "timeFormat(datum.parsedDate, '%b %Y')"
        },
        {
          "type": "formula",
          "as": "monthLabel",
          "expr": "datum.monthName"
        },
        {
          "type": "aggregate",
          "fields": ["Usage(kWh)"],
          "ops": ["sum"],
          "as": ["total"],
          "groupby": ["monthLabel"]
        },
        {"type": "formula",
        "as": "ttformattedTotal",
        "expr": "format(datum.total, ',')"},
        {
          "type": "collect",
          "sort": { "field": "monthIndex", "order": "ascending" }
        }
      ]
    }
  ],
      "signals": [
      {
        "name": "width",
        "init": "containerSize()[0]",
        "on": [{ "events": "window:resize", "update": "containerSize()[0]" }]
      },
      {
        "name": "height",
        "init": "containerSize()[1]",
        "on": [{ "events": "window:resize", "update": "containerSize()[1]" }]
      }
  ],
 
 
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "padding": 0.3,
      "domain": { "data": "YoY", "field": "monthLabel" }
    },
    {
      "name": "y",
      "type": "linear",
      "domain": { "data": "YoY", "field": "total" },
      "range": "height"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x"
    },
    {
      "orient": "left",
      "scale": "y",
      "title": "kWh",
      "format": "s"
    }
  ],
 "marks": [
    {
      "type": "rect",
      "from": {"data":"YoY"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "monthLabel"},
          "width": {"scale": "x", "band": 1},
          "y": {"scale": "y", "field": "total"},
          "y2": {"scale": "y", "value": 0},
          "tooltip": {"field": "ttformattedTotal"}
        },
        "update": {
          "fill": {"value": "purple"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "YoY"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "monthLabel", "band": 0.5},
          "y": {"scale": "y", "field": "total", "offset": -2},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "black"}
     
        }
      }
    }
  ]}
 
